<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@drawable/fragment_shape"
    android:orientation="vertical"
    android:padding="10dp">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Motivation"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view13"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorPrimary" />

    <com.appyvet.materialrangebar.RangeBar
        android:id="@+id/rb_moti_moti"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:mrb_connectingLineColor="@color/colorPrimary"
        app:mrb_connectingLineColors="@color/colorPrimary"
        app:mrb_pinColor="@color/colorPrimary"
        app:mrb_pinMaxFont="12dp"
        app:mrb_pinMinFont="12sp"
        app:mrb_pinPadding="0dp"
        app:mrb_pinRadius="14dp"
        app:mrb_pinTextColor="@color/colorPrimary"
        app:mrb_rangeBar="false"
        app:mrb_rangeBarColor="@color/cardview_shadow_start_color"
        app:mrb_rangeBarPaddingBottom="6dp"
        app:mrb_rangeBar_rounded="true"
        app:mrb_selectorBoundaryColor="@color/colorPrimary"
        app:mrb_selectorBoundarySize="6dp"
        app:mrb_selectorColor="@color/cardview_light_background"
        app:mrb_selectorSize="2dp"
        app:mrb_temporaryPins="false"
        app:mrb_tickColor="@color/cardview_light_background"
        app:mrb_tickEnd="20"
        app:mrb_tickHeight="1dp"
        app:mrb_tickInterval="1"
        app:mrb_tickStart="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_interval_apvt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_weight="1"
            android:text="Not at all"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_interval_apvt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_weight="1"
            android:text="Extremely"
            android:textAlignment="textEnd"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:id="@+id/view18"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_diary_moti_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_rounded_corner"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_diary_moti_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/button_rounded_corner"
            android:text="Back"
            android:textAllCaps="false"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
